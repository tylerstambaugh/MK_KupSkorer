
@{
    ViewBag.Title = "Kups";
}

<h2>Kups</h2>

<h4>Enter KupID for Report Kard:</h4>

<div>
    @using (Html.BeginForm("GetKupReportKArdByKupId", "ReportKard", FormMethod.Post, new { @class = "form-horizontal ", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row justify-content-center">
            <label for="KupId">Kup ID:</label>
            <div class="col-md-10 form-control">
                <input type="text" id="KupId" name="KupId" />
            </div>
        </div>

        <br />
        <div class="form-group row justify-content-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Get Kup Report Kard" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

