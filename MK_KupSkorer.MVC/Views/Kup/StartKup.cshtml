            @Html.DropDownListFor(model => model.Player2Id, ViewData["Players"] as IEnumerable<SelectListItem>, "Select Player", htmlAttributes: new { @class = "form-control", })
            @Html.ValidationMessage("KupCreate", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select Player 3", htmlAttributes: new { @class = "control-label col-md-2" })
